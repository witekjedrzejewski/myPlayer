<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidhive.musicplayer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk 
        android:minSdkVersion="11"  
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.android.myplayer.PlayingActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.android.myplayer.PlayListActivity" />
        <activity
            android:name="list.ArtistsListActivity"
            android:label="@string/title_activity_artists_list" >

        </activity>
        <activity
            android:name="list.AllAlbumsListActivity"
            android:label="@string/title_activity_all_albums_list" >
        </activity>
        <activity
            android:name="list.AllSongsListActivity"
            android:label="@string/title_activity_all_songs_list" >
        </activity>
        <activity
            android:name="list.AlbumsFromArtistListActivity"
            android:label="@string/title_activity_albums_from_artist_list" >
        </activity>
        
        <activity
            android:name="list.SongsFromArtistListActivity"
            android:label="@string/title_activity_songs_from_artist_list" >
        </activity>
        
        <activity
            android:name="list.SongsFromAlbumListActivity"
            android:label="@string/title_activity_songs_from_album_list" >
        </activity>
        <activity
            android:name="com.android.myplayer.FromArtistTabActivity"
            android:label="@string/title_activity_from_artist_tab" >
        </activity>
        <activity
            android:name="com.android.myplayer.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>  
        </activity>
        <service
            android:name="com.android.myplayer.MusicService"
            android:exported="false" >
        </service>

        <activity
            android:name="com.androidhive.musicplayer.ArtistsSongsListActivity"
            android:label="@string/title_activity_artists_songs_list" >
        </activity>
        <activity
            android:name="com.androidhive.musicplayer.AllAlbumsListActivity"
            android:label="@string/title_activity_all_albums_list" >
        </activity>
    </application>

</manifest>
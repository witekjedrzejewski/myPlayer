<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidhive.musicplayer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.android.myplayer.PlayingActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" >
        </activity>
        <activity android:name="com.android.myplayer.PlayListActivity" />
        <activity
            android:name="list.ArtistsListActivity"
            android:label="@string/title_activity_artists_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="list.AlbumsListActivity"
            android:label="@string/title_activity_albums_list" >
        </activity>
        <activity
            android:name="list.ItemsListActivity"
            android:label="@string/title_activity_items_list" >
        </activity>
        <activity
            android:name="list.SongsListActivity"
            android:label="@string/title_activity_songs_list" >
        </activity>
        <activity
            android:name="com.android.myplayer.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>

        <service
            android:name="com.android.myplayer.MusicService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.android.myplayer.action.CHANGE_PLAYLIST" />
                <action android:name="com.android.myplayer.action.TOGGLE_PLAYBACK" />
                <action android:name="com.android.myplayer.action.PLAY" />
                <action android:name="com.android.myplayer.action.PAUSE" />
                <action android:name="com.android.myplayer.action.SKIP" />
                <action android:name="com.android.myplayer.action.PREVIOUS" />
                <action android:name="com.android.myplayer.action.STOP" />
                <action android:name="com.android.myplayer.action.FORWARD" />
                <action android:name="com.android.myplayer.action.BACKWARD" />
                <action android:name="com.android.myplayer.action.BROADCAST_SEEK" />
                <action android:name="com.android.myplayer.action.BROADCAST_TRACK_DATA" />
            </intent-filter>
        </service>

        <activity
            android:name="com.androidhive.musicplayer.ArtistsSongsListActivity"
            android:label="@string/title_activity_artists_songs_list" >
        </activity>
        <activity
            android:name="com.androidhive.musicplayer.AllAlbumsListActivity"
            android:label="@string/title_activity_all_albums_list" >
        </activity>
    </application>

</manifest>